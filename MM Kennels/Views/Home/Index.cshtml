@model MM_Kennels.Animal
@{
    ViewData["Title"] = "Home Page";
}

<h1>Schedule an Animal</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Schedule" asp-action="Schedule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LengthOfStay" class="control-label"></label>
                <input asp-for="LengthOfStay" class="form-control" />
                <span asp-validation-for="LengthOfStay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h1>View a Day</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Schedule" asp-action="Day" method="post">
            <div class="form-group">
                <label>Day</label>
                <input type="number" name="Day" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search Day" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h1>View an Animal</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Schedule" asp-action="Animal" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find Animal" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
